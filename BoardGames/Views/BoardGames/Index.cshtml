@model PagedList.IPagedList<BoardGames.Models.BoardGame>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "BoardGames";
}

<h2>Gry</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "BoardGames", FormMethod.Get))
{
    <p>
        Szukaj: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}


<div class="row row-cols-1 row-cols-md-3">
    @foreach (var item in Model)
    {

        <div class="col mb-4">
            <div class="card shadow-lg p-2 bg-white rounded">
                <img src="@item.ImageUrl" onError="~/Obrazki/boardgame-placeholder.jpg" class="img-fluid" style="object-fit: contain;" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted text-right">@item.MinPlayers-@item.MaxPlayers graczy </h6>
                    <p class="card-text">@item.Description</p>
                    <a href="Boardgames/Details/@item.ID" class="stretched-link"></a>
                </div>
            </div>
        </div>

    }
</div>


<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))