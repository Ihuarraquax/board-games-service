@model IEnumerable<BoardGames.Models.Player>

@{
    ViewBag.Title = "Index";
}

<h2>Społeczność</h2>

<div class="row row-cols-1 row-cols-md-4">
    @foreach (var item in Model)
    {
        <div class="card mb-1 p-2" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-5">
                    @{ var image = item.Avatar != null ? item.Avatar : "img_avatar.png";}
                    <img class="card-img-top" src="~/Obrazki/@image" style="border-radius: 50%;object-fit: cover;  width:100px; height:100px;" alt="Card image">
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        
                    </div>
                </div>
                <div class="col-md-12">
                    <p class="card-text">Ulubione gry: @item.FavouriteGames.Aggregate("", (prev, cur) => prev += " " + cur.Name)</p>
                </div>
            </div>
            <a href="Players/Details/@item.ID" class="stretched-link"></a>
        </div>
    }
</div>
