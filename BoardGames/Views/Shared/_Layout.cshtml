<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/Content/Site.css">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        @Html.ActionLink("PLanSZ00fki", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li>@Html.ActionLink("Gry Planszowe", "Index", "BoardGames", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Gracze", "Index", "Players", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Wydarzenia", "Index", "Events", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Drużyny", "Index", "Teams", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Kategorie gier", "Index", "Categories", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Statystyki", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>




  
    <div class="container body-content" style="margin-top:30px">
        @RenderBody()
        <hr />
        <footer class="fixed-bottom">
            <p>&copy; @DateTime.Now.Year - Hubert Zabłocki</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
